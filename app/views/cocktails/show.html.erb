<%=render 'components/banner', title: @cocktail.name, img:(cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill) %>
<div class="container">
  <div class="in-line">
    <div class="flex-item">
      <h5>Ingredient list</h5>
      <%@cocktail.doses.each do |dose|%>
        <p><%=dose.ingredient.name%>: <%=dose.description%><%=link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%></p>
      <%end%>
    </div>
    <div class="flex-item">
      <%= render 'doses/new'%>
    </div>
  </div>


  <div>
    <h5>Reviews</h5>
    <%@cocktail.reviews.each do |review|%>
      <p><%=review.content%> (<%=review.rating%>)</p>
    <%end%>
  </div>

  <%= render 'reviews/new'%>
</div>




